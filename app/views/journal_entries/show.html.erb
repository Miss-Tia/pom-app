<div class="journal-show-container">
  <h1 class="entry-title">
    <%= @journal_entry.title.presence || "📝 Journal Entry" %>
  </h1>

  <p class="entry-date">
    <strong>Date:</strong> <%= @journal_entry.created_at.strftime("%B %d, %Y") %>
  </p>

  <% if @journal_entry.category.present? %>
    <p class="entry-category">
      <strong>Category:</strong> <%= @journal_entry.category.name %>
    </p>
  <% end %>

  <hr>

  <div class="entry-content">
    <%= simple_format(@journal_entry.content) %>
  </div>

  <div class="entry-actions">
    <%= link_to "✏️ Edit Entry", edit_journal_entry_path(@journal_entry), class: "btn btn-small" %>
    <%= link_to "🗑️ Delete Entry", journal_entry_path(@journal_entry), method: :delete, data: { confirm: "Are you sure you want to delete this entry?" }, class: "btn btn-danger btn-small" %>
    <%= link_to "⬅️ Back to Journal", journal_entries_path, class: "btn btn-secondary btn-small" %>
  </div>
</div>
