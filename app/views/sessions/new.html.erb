<div class="form-container">
  <h2 class="form-title">Welcome Back</h2>
<p class="login-subtitle">Log in to access your journal, garden, and recipes â€” your Peace of Mind awaits.</p>
<p class="signup-link">
  New to POM?
  <%= link_to "Sign up here", signup_path, class: "link-highlight" %>
</p>
<% if flash[:alert] %>
  <div class="flash-alert"><%= flash[:alert] %></div>
<% end %>

  <%= form_with url: login_path, local: true, class: "login-form" do |form| %>
    <div class="form-group field-wrapper">
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-input" %>
    </div>

    <div class="form-group field-wrapper">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-input" %>
    </div>

    <%= form.submit "Log In", class: "btn green-btn" %>
  <% end %>

  <%= link_to "Back to Home", root_path, class: "back-link" %>
</div>
