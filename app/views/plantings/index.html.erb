<h1 class="dashboard-title">Currently Growing in <%= @garden.name %></h1>

<div class="planting-grid">
  <% @plantings.each do |planting| %>
    <div class="planting-card">
      <h2>🌱 <%= link_to planting.plant.name, planting_path(planting), class: "link-highlight" %></h2>
      <p><strong>Date Planted:</strong> <%= planting.date_planted.strftime("%B %d, %Y") %></p>

      <% if planting.notes.present? %>
        <div class="planting-notes">
          <p><strong>📝 Notes:</strong></p>
          <p>
            <%= truncate(planting.notes, length: 100, separator: ' ') %>
            <%= link_to 'Read more', planting_path(planting), class: "link-highlight" %>
          </p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<div class="garden-buttons">
  <%= link_to "Add New", new_garden_planting_path(@garden), class: "btn primary" %>
  <%= link_to "← Back to Gardens", gardens_path, class: "btn secondary" %>
</div>
