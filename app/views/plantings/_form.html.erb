<div class="journal-form-container">
  <%= form_with model: journal_entry, local: true do |form| %>
    <% if journal_entry.errors.any? %>
      <div class="form-errors">
        <h2><%= pluralize(journal_entry.errors.count, "error") %> prevented this entry from being saved:</h2>
        <ul>
          <% journal_entry.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <h2 class="form-title"><%= journal_entry.persisted? ? "✏️ Edit Journal Entry" : "📝 New Journal Entry" %></h2>

    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, placeholder: "Or leave blank to use a prompt...", class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :content, "Journal Entry" %>
      <%= form.text_area :content, rows: 10, class: "form-textarea" %>
    </div>

    <div class="form-actions">
      <%= form.submit "Save Entry", class: "btn primary-btn" %>
    </div>
  <% end %>

  <div class="form-actions center">
    <%= link_to "← Back to Journal", journal_entries_path, class: "btn secondary-btn" %>
  </div>
</div>
