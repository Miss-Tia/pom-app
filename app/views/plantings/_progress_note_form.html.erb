<%= form_with url: add_progress_note_planting_path(planting), method: :post, local: true, id: "note-form" do |form| %>
  <% if defined?(error) && error.present? %>
    <p class="error-message"><%= error %></p>
  <% end %>

  <div class="form-group">
    <%= form.label :content, "New Note" %>
    <%= form.text_area :content, rows: 3, class: "form-textarea" %>
  </div>

  <div class="form-actions center">
    <%= form.submit "Add Note", class: "btn green-btn" %>
  </div>
<% end %>
