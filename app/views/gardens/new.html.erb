<div class="form-container">
  <h1 class="dashboard-title">Add a New Garden</h1>

  <%= form_with(model: @garden, url: gardens_path, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :location %>
      <%= form.text_field :location, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :notes %>
      <%= form.text_area :notes, rows: 4, class: "form-control" %>
    </div>

    <%= form.submit "Save Garden", class: "btn primary" %>
    <%= link_to "Cancel", gardens_path, class: "btn secondary" %>
  <% end %>
</div>
