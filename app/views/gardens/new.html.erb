<div class="form-container">
  <h1 class="form-title">New Garden Space</h1>

  <%= form_with(model: @garden, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :location %>
      <%= form.text_field :location, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :notes %>
      <%= form.text_area :notes, class: "form-input", rows: 5 %>
    </div>

    <div class="entry-actions">
      <%= form.submit "🌱 Create Garden", class: "btn green-btn" %>
      <%= link_to "← Back to Gardens", gardens_path, class: "btn brown-btn" %>
    </div>
  <% end %>
</div>
