       <h2 class="garden-title"><%= garden.name %></h2> 
        <p class="garden-location"><strong>Location:</strong> <%= garden.location %></p>

        <div class="garden-buttons">
        <%= link_to "Garden Notes", garden_path(garden), class: "btn brown-btn" %>
        <%= link_to "View Plantings", garden_plantings_path(garden), class: "btn terracotta-btn" %>
      </div>
