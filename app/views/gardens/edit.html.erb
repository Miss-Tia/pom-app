<div class="form-container">
  <h1 class="dashboard-title">Edit Garden</h1>

  <%= form_with(model: @garden, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :location %>
      <%= form.text_field :location, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :notes %>
      <%= form.text_area :notes, class: "form-input", rows: 5 %>
    </div>

    <div class="form-actions">
      <%= form.submit "Update Garden", class: "btn primary" %>
      <%= link_to "← Back to Gardens", gardens_path, class: "btn secondary" %>
    </div>
  <% end %>

  <hr class="divider" />

  <div class="danger-zone">
    <h2>CAUTION!</h2>
    <p>Once deleted, this garden and its plantings cannot be recovered.</p>

    <%= button_to "🗑️ Delete Garden", @garden, method: :delete,
          data: { confirm: "Are you sure you want to delete this garden? This cannot be undone." },
          class: "btn btn-danger" %>
  </div>
</div>
