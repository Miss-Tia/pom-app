<div class="form-container">
  <h1 class="dashboard-title">Edit Garden</h1>

  <%= form_with(model: @garden, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :location %>
      <%= form.text_field :location, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :notes %>
      <%= form.text_area :notes, class: "form-input", rows: 5 %>
    </div>

    <div class="entry-actions">
      <%= form.submit "Update Garden", class: "btn green-btn" %>
      <%= link_to "â† Back to Gardens", gardens_path, class: "btn brown-btn" %>
    </div>
  <% end %>

  <div class="danger-zone center">
    <h2>CAUTION!</h2>
    <%= button_to "ðŸ—‘ï¸ Delete Garden", garden_path(@garden),
        method: :delete,
        data: { confirm: "Are you sure you want to delete this garden and all associated plantings? This cannot be undone." },
        class: "btn danger-btn" %>
    <p>This action cannot be undone. Please confirm before deleting this garden.</p>
  </div>
</div>
