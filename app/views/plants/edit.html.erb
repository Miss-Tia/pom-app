<h1>Edit <%= @plant.name %></h1>

<%= form_with model: @plant, local: true do |form| %>
  <div class="form-group">
    <%= form.label :name, "Plant Name" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :notes, "Care Notes" %>
    <%= form.text_area :notes, rows: 3, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :days_to_harvest, "Days to Harvest" %>
    <%= form.number_field :days_to_harvest, class: "form-control" %>
  </div>

  <%= form.submit "Update Plant", class: "btn btn-primary" %>
  <%= link_to "Cancel", plant_path(@plant), class: "btn btn-secondary" %>
<% end %>
